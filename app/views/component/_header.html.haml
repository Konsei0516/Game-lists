.header
  .header-nav
    %h1.app-name
      Game review
  -if user_signed_in?
    %ul.header-contents
      %li.header-contents__content
        = link_to user_path(current_user) do
          = current_user.name
      %li.header-contents__content
        = link_to new_review_path do
          新規投稿
      %li.header-contents__content
        = link_to youtubes_index_path do
          youtube検索
      %li.header-contents__content
        = link_to rakuten_search_reviews_path do
          楽天検索
      %li.header-contents__content
        = link_to destroy_user_session_path, method: :delete do
          ログアウト
  -else
    %ul.header-log
      %li.header-log__sign
        = link_to new_user_session_path do
          ログイン
      %li.header-log__sign
        = link_to new_user_registration_path do
          新規登録
= render "component/notifications"