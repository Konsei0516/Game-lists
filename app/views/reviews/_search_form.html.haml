.search__form
  = search_form_for(@q, url: search_reviews_path,class:"search-form__for") do |f|
    .search__form__group
      %h4= f.label :title, "フリーワード検索"
      = f.search_field :title_cont,placeholder: "フリーワード検索",class:"search__form__group__title"
    .search__form__group
      = f.label :category_id_eq, 'カテゴリー'
      %br
      .search__form__group__category
        = f.collection_select :categories_id_eq, @categories, :id, :name, :include_blank => '指定なし'
    .search__form__group
      .search__form__group__category
        = f.select( :sorts, {"新着順": "id desc"},{onchange: "this.form.submit()"})
    .search-btn
      = f.submit "検索",class:"search-btn__on"